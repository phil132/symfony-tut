{% extends 'base.html.twig' %}

{% block title %}
    Single Post - {{ post.title }}
{% endblock %}

{% block body %}
    <h3>{{ post.title }}</h3>
    <div>{{ post.text }}</div>
    <div>
        {% if date(post.created) < date('-1year') %}
            <div style="color: red">This post is old</div>
        {% else %}
            <div style="color: grey">{{ post.created|date('d/m/Y') }}</div>
        {% endif %}
    </div>
{% endblock %}